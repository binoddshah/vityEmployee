
@{
    Layout = null;
}
@model vityEmployeeInfoSystem.Models.UserTable

<!DOCTYPE html>
<style>
    h1{text-align:center;font-family:Verdana, Geneva, Tahoma, sans-serif;color:darkgreen;font-size:xx-large;}
    .center{
        position:absolute;
        top:30%;
        left:50%;
        transform:translate(-50%,-50%);
-    }
input,button{font-size:30px;text-align:center;width:500px;}
table td{font-size:30px;}

</style>
<html>

<head>
    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@3.3.7/dist/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">

    <!-- Optional theme -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@3.3.7/dist/css/bootstrap-theme.min.css" integrity="sha384-rHyoN1iRsVXV4nD0JutlnGaslCJuC7uwjduW9SVrLvRYooPp2bWYgmgJQIXwl/Sp" crossorigin="anonymous">

    <!-- Latest compiled and minified JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@3.3.7/dist/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>
    <meta name="viewport" content="width=device-width" />
    <title>login</title>
 
</head>
<body>
   <h1 style="text-align:center">Login Page</h1>
   <form action="login" method="post">
       <div asp-validation-summary="All" class="text-danger"></div>
      
           <table class="center" >
               <tr>
                   <td><label asp-for="UserName" class="col-form-label"></label></td>
                   <td><input  asp-for="UserName" class="form-control"/>
                   <span asp-validation-for="UserName" class="text-danger"></span>    
                   </td>
               </tr>
               <tr>
                   <td><label asp-for="Password" class="col-form-label"></label></td>
                   <td><input type="password" asp-for="Password" class="form-control"/>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </td>
               </tr>
               <tr><td colspan="4">
                   <button type="submit" class="btn  btn-primary" style="width:100%">Login</button>
               </td></tr>
           </table>
    
   </form>
 
</body>
</html>
