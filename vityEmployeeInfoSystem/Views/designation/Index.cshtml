@model IEnumerable<vityEmployeeInfoSystem.Models.DesignationTable>

@{
    ViewData["Title"] = "Index";
}

<h1>Designation List</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DesignationName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DesignationName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.DesignationId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.DesignationId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.DesignationId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
